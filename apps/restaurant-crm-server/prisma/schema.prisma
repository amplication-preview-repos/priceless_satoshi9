datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  createdAt    DateTime      @default(now())
  email        String?
  firstName    String?
  id           String        @id @default(cuid())
  lastName     String?
  phone        String?
  reservations Reservation[]
  updatedAt    DateTime      @updatedAt
}

model Table {
  createdAt    DateTime      @default(now())
  id           String        @id @default(cuid())
  numberField  Int?
  reservations Reservation[]
  restaurant   Restaurant?   @relation(fields: [restaurantId], references: [id])
  restaurantId String?
  seats        Int?
  updatedAt    DateTime      @updatedAt
}

model Restaurant {
  address      String?
  createdAt    DateTime      @default(now())
  email        String?
  id           String        @id @default(cuid())
  name         String?
  phone        String?
  reservations Reservation[]
  tables       Table[]
  updatedAt    DateTime      @updatedAt
}

model Reservation {
  client          Client?     @relation(fields: [clientId], references: [id])
  clientId        String?
  createdAt       DateTime    @default(now())
  date            DateTime?
  id              String      @id @default(cuid())
  numberOfGuests  Int?
  restaurant      Restaurant? @relation(fields: [restaurantId], references: [id])
  restaurantId    String?
  specialRequests String?
  table           Table?      @relation(fields: [tableId], references: [id])
  tableId         String?
  time            DateTime?
  updatedAt       DateTime    @updatedAt
}
